{
  "name": "firestarter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-scripts": "1.0.12"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "local-server": "firebase serve --only functions,hosting",
    "upgrade-local-emulator": "npm uninstall -g @google-cloud/functions-emulator && npm install -g @google-cloud/functions-emulator && open https://firebase.google.com/docs/functions/local-emulator",
    "test-firebase": "open https://firebase.google.com/docs/functions/unit-testing",
    "test-fb": "mocha functions/test --reporter spec",
    "babel": "babel src/ -d functions/dist/ --presets es2015,stage-2,react",
    "webpack": "webpack --config webpack.config.ssr.js"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.2",
    "firebase-admin": "^5.2.1",
    "firebase-functions": "^0.6.3",
    "mocha": "^3.5.0",
    "regress": "^1.0.2",
    "reqres": "^1.3.0",
    "sinon": "^3.2.1",
    "svg-inline-loader": "^0.8.0",
    "webpack": "^3.6.0"
  }
}
